<h2>Edit Review for <%= @user_book.book.title %></h2>
<%= form_with(model: @review,
              url: user_book_review_path(@user_book),
              method: :patch,
              local: true) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, step: 0.5 %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div class="actions">
    <%= form.submit "Update Review" %>
  </div>
<% end %>