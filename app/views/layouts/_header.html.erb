<header>
  <div class="header-container">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', alt: 'Bookscape Logo' %>
      <% end %>
    </div>
    <nav>
      <% if user_signed_in? %>
        <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <% end %>
    </nav>
  </div>
</header>
