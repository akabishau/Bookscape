<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>
<%= form_with url: search_path, method: :get do |form| %>
  <%= form.label :query, "Search for books:" %>
  <%= form.text_field :query, placeholder: "Enter a book title or author..." %>
  <%= form.submit "Search" %>
<% end %>
<% if @results %>
  <% @results["items"].each do |book| %>
    <div class="book-card">
      <h2><%= book["volumeInfo"]["title"] %></h2>
      <p><%= book["volumeInfo"]["authors"].join(", ") if book["volumeInfo"]["authors"] %></p>
      <p><%= book["volumeInfo"]["categories"].join(", ") if book["volumeInfo"]["categories"] %></p>
      <p><%= book["volumeInfo"]["description"] %></p>
      <% if book["volumeInfo"]["imageLinks"] && book["volumeInfo"]["imageLinks"]["thumbnail"] %>
        <img src="<%= book["volumeInfo"]["imageLinks"]["thumbnail"] %>" alt="<%= book["volumeInfo"]["title"] %>">
      <% end %>
    </div>
  <% end %>
<% end %>
