<%= render 'quote' %>
<div class="home-books-container">
  <% @books_by_status.each do |status, user_books| %>
    <div class="section-info">
      <h2><%= status.titleize %></h2>
      <p><%= pluralize(user_books.count, 'book') %></p>
      <%= link_to "View All >", user_books_path(sort: "title_asc", statuses: [status]) %>
    </div>
    <div class="books">
      <% user_books.each do |user_book| %>
        <% book = user_book.book %>
        <div class="book">
          <%= link_to user_book_path(user_book), class: "book-link" do %>
            <% image_tag book[:cover_url_thumbnail], alt: book[:title], class: "book-cover" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>